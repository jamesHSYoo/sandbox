{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ 활성 파일 빌드",
      "command": "g++",
      "args": [
        "-std=c++17",
        "${fileDirname}/*.cpp",
        "-g",
        "-o",
        "${fileDirname}/bin/main_program"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "컴파일러: /usr/bin/clang++"
    }
  ]
}
